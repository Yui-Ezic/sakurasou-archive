{
    "license": "MIT",
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true,
            "thecodingmachine/discovery": true
        }
    },
    "require": {
        "php": "^8.1",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^2.14",
        "laminas/laminas-config-aggregator": "^1.8",
        "league/flysystem": "^3.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "league/oauth2-server": "^8.4",
        "monolog/monolog": "^3.2",
        "php-di/php-di": "^6.4",
        "psr/container": "^1.0",
        "ramsey/uuid": "^4.7",
        "sentry/sdk": "^3.2",
        "slim/psr7": "^1.5",
        "slim/slim": "4.*",
        "symfony/cache": "^6.2",
        "symfony/console": "^6.2",
        "twig/twig": "^3.5",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "doctrine/data-fixtures": "^1.6",
        "friendsofphp/php-cs-fixer": "^3.5",
        "lctrs/psalm-psr-container-plugin": "^1.7",
        "overtrue/phplint": "^4.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^4.18"
    },
    "autoload": {
        "files": [
            "src/env.php"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phplint",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "psalm": "psalm --config=psalm.xml",
        "test": "phpunit --colors=always",
        "app": "php bin/app.php --ansi"
    }
}
